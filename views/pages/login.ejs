<%- include('../components/header',{title:"Login-Laundry",auth:auth,data:data,admin:admin}) %>

<div class="background-image">



  <div class="form-container">
    <h2 style="margin-bottom: 20px;font-size:55px; font-family:Verdana, Geneva, Tahoma, sans-serif;text-shadow:2px 2px black">LOGIN</h2>
    <form id="login" method="post" action="/login" onsubmit="return validateform()">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">E-mail</label>
          <input type="text" class="form-control" id="email" aria-describedby="emailHelp" name="roll" onblur="validateemail()">
          <p id="emailerror" class="error-message"></p>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" onblur="validatepassword()">
          <p id="passworderror" class="error-message"></p>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <p>Not Registered? <a href="/register">Signup here</a></p>
    </form>
  </div>
</div>
  <% if(condition){ %>
    <div id="myModal" class="modal1"><div class="modal-content1"><span class="close">&times;</span><p>User with same Roll number already exists please login</p></div></div>
<% } %>
<% if(login){ %>
  <div id="myModal" class="modal1"><div class="modal-content1"><span class="close">&times;</span><p>Please login first</p></div></div>
<% } %>
<% if(password1){ %>
    <div id="myModal" class="modal1"><div class="modal-content1"><span class="close">&times;</span><p>Password Wraang Try again</p></div></div>
<% } %>
<% if(success){ %>
    <div id="myModal" class="modal1"><div class="modal-content1"><span class="close">&times;</span><p>Sucessfully registered  please login</p></div></div>
<% } %>

  <style>

    .background-image {
      background-image: url('https://wallpaperaccess.com/full/2637773.jpg');
      background-size: cover;
      background-position: center;
      height: 85vh;
      display: flex;
      justify-content: center;
      align-items: center;
  }

  .form-container {
    color: white;
      background-color: rgba(49, 49, 49, 0.484);
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      width: 520px;
      font-size: 18px;
      font-family: 'Arial', sans-serif;
  }

  .btn-primary {
      transition: all 0.3s;
  }

  .btn-primary:hover {
      transform: scale(1.1);
  }

  .error-message {
      color: red;
  }


    .modal1 {
        display: block; 
        position: fixed;  
        z-index: 1;
        padding-top: 100px; 
        left: 0;
        top: 0;
        width: 100%; 
        height: 100%; 
        overflow: auto;  
        background-color: rgb(0,0,0); 
        background-color: rgba(0,0,0,0.4); 
      }
      
      /* Modal Content */
      .modal-content1 {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
      }
      
      /* The Close Button */
      .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
      }
      
      .close:hover,
      .close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
      }



    #login{
        padding-left: 25%;
        padding-right: 25%;
    }
    .error{
        border: solid 3px red;
    }
  </style>
  <script>
    var modal = document.getElementById("myModal");
    var span = document.getElementsByClassName("close")[0];
    span.onclick = function() {
        modal.style.display = "none";
      }

     window.onclick = function(event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      }
    
    function validateemail(){
        if(($("#email").val()).length>=1){
            $("#emailerror").text("")
            $("#email").removeClass("error")
        }
        if($("#email").val()==""){
            $("#email").addClass("error")
            $("#emailerror").text("Email Cannot Be Empty")
        }
        const email = $("#email").val();
        if (validateEmail(email)) {$("#email").removeClass("error")
        $("#emailerror").text("")
        } else {
            $("#emailerror").text("Invalid email address")
        } 
        
    }
    function validateEmail(email) {
      const emailRegex = /^[A-Za-z0-9._%-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$/;
      return emailRegex.test(email);
    }

    function validatepassword(){
        if(($("#password").val()).length>=1){
            $("#passworderror").text("")
            $("#password").removeClass("error")
        }
        if($("#password").val()==""){
            $("#password").addClass("error")
            $("#passworderror").text("Password Cannot Be Empty")
        }
    }


    function validateform(){
        var isValid=true;
        if($("#email").val()==""){
            isValid=false;
            $("#email").addClass("error")
            $("#emailerror").text("Username Cannot Be Empty")
        }
        if($("#password").val()==""){
             isValid=false;
            $("#password").addClass("error")
            $("#passworderror").text("Password Cannot Be Empty")
        } 
       
        return isValid
    }
  </script>
